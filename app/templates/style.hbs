<div class="panel panel-default">
  <div class="panel-heading"><h3>{{model.name}}</h3></div>
  <div class="panel-body">
  <div class="container-fluid">
  <p>{{model.description}}</p>
  <table class="table" class="col-md-6">
    <tbody>
	<tr>
	<th scope="row">Category</th>
	<td>{{model.category.name}}</td>
	</tr>
	<tr>
	<th scope="row">International Bittering Units (IBU)</th>
	<td>{{model.ibuMin}} - {{model.ibuMax}}</td>
	</tr>
	<tr>
	<th scope="row">Alcohol By Volume (ABV)</th>
	<td>{{model.abvMin}} - {{model.abvMax}}%</td>
	</tr>
	<tr>
	<th scope="row">Standard Reference Method (SRM)</th>
	<td>{{model.srmMin}} - {{model.srmMax}}</td>
	</tr>
	<tr>
	<th scope="row">Original Gravity (OG)</th>
	<td>{{model.ogMin}}{{#if model.ogMax}}- {{model.ogMax}}{{/if}}</td>
	</tr>
  </tbody>
 </table>
 </div>
</div>
</div>

